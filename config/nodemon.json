{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "watch": [
        "app/views/",
        "app/styles/",
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js, html, scss, svg"
}
