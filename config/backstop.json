{
  "id": "nhsuk",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "laptop",
      "width": 1680,
      "height": 1050
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Redesign components",
      "url": "http://localhost:3000/examples/components"
    },
    {
      "label": "Header component",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-global-header"
      ]
    },
    {
      "label": "Header & Search components",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-global-header"
      ],
      "clickSelector": ".nhsuk-global-header__search .search-toggle__button"
    },
    {
      "label": "Navigation component",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-global-nav"
      ]
    },
    {
      "label": "Header & Navigation components",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-global-header",
        ".nhsuk-global-nav"
      ],
      "clickSelector": ".nhsuk-global-header__menu .menu-toggle__button"
    },
    {
      "label": "Breadcrumb component",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-breadcrumb"
      ]
    },
    {
      "label": "Footer component",
      "url": "http://localhost:3000/examples/components",
      "selectors": [
        ".nhsuk-global-footer"
      ]
    }
  ],
  "paths": {
    "bitmaps_reference": "tests/backstop_data/bitmaps_reference",
    "bitmaps_test": "tests/backstop_data/bitmaps_test",
    "engine_scripts": "tests/backstop_data/engine_scripts",
    "html_report": "tests/backstop_data/html_report",
    "ci_report": "tests/backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
