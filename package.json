{
  "name": "ofh-design-system-toolkit",
  "version": "2.0.0-alpha.2",
  "description": "Our Future Health design system toolkit contains the code you need to start building user interfaces for Our Future Health websites and services.",
  "scripts": {
    "prepare": "gulp bundle",
    "build": "gulp build",
    "watch": "gulp watch",
    "clean": "gulp clean",
    "test": "npm run lint && npm run jest:ci",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint -c ./tests/linters/.eslintrc.js packages/components/**/*.js",
    "lint:css": "stylelint -f verbose --config ./tests/linters/.stylelintrc.yml 'packages/**/*.scss'",
    "lint:html": "htmlhint --config ./tests/linters/.htmlhintrc ./dist/app/components/**/*.html",
    "backstop:ref": "concurrently \"npm start\" \"wait-on http://localhost:3000 && backstop --config=./tests/backstop/backstop.js reference --docker\"",
    "backstop:test": "concurrently \"npm start\" \"wait-on http://localhost:3000 && backstop --config=./tests/backstop/backstop.js test --docker\"",
    "backstop:ci": "start-server-and-test start http://0.0.0.0:3000 backstop:citest",
    "backstop:citest": "backstop --config=./tests/backstop/backstop.js test --docker",
    "backstop:approve": "backstop --config=./tests/backstop/backstop.js approve",
    "backstop:clean": "rm -rf tests/backstop/bitmaps_test/*",
    "build-gh-pages": "gulp bundle && BASE_URL='/design-system-toolkit/' gulp site:build",
    "build-gh-release": "gulp zip",
    "jest:dev": "jest --watch",
    "jest:ci": "jest",
    "site:dev": "npm run site:build:toolkit && npm run site:clean && npm run site:watch",
    "site:clean": "rm -rf site/dist/ && mkdir -p site/dist",
    "site:watch": "concurrently -n toolkit:watch 'npm run watch' 'npm:site:watch:css' 'npm:site:watch:js' 'npm:site:serve'",
    "site:watch:css": "npm run site:build:css -- --watch",
    "site:watch:js": "npm run site:build:js -- --watch",
    "site:build": "npm run site:build:toolkit && npm run site:build:css && npm run site:build:js",
    "site:build:toolkit": "gulp clean && gulp build",
    "site:build:css": "sass --style compressed --load-path packages/ site/styles/:site/dist/css/",
    "site:build:js": "webpack --config site.webpack.config.js",
    "site:serve": "npx @11ty/eleventy --serve --config site.eleventy.config.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "babel-loader": "^8.2.5",
    "backstopjs": "^5.4.4",
    "concurrently": "^7.4.0",
    "eslint": "^7.32.0",
    "eslint-config-nhsuk": "^1.0.0",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.0.2",
    "highlight.js": "^11.6.0",
    "htmlhint": "^0.14.2",
    "husky": "^4.3.8",
    "iframe-resizer": "^4.3.2",
    "jest": "^26.6.3",
    "js-beautify": "^1.14.6",
    "minimist": "^1.2.5",
    "nunjucks": "^3.2.3",
    "sass": "^1.44.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "wait-on": "^6.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-stream": "^5.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "./tests/linters/.eslintrc.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "files": [
    "dist",
    "packages"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ourfuturehealth/design-system-toolkit.git"
  },
  "homepage": "https://ourfuturehealth.github.io/design-system-toolkit/",
  "license": "MIT"
}
