{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Grey care card' %}
{% from 'components/care-card/macro.njk' import careCard %}
{% extends 'includes/layout.njk' %}

{% block body %}

<div class="nhsuk-width-container">
  <main id="maincontent" class="nhsuk-main-wrapper">

    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-page-content">
          {{ careCard({
            "class": "grey",
            "heading": "Call 111",
            "HTML": "<p>If you can't speak to your GP and don't know what to do next.</p>"
          }) }}
        </div>
      </div>
    </div>

  </main>
</div>

{% endblock %}
