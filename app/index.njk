{% set title = 'Home' %}
{% from 'components/contents-list/macro.njk' import contentsList %}
{% from 'components/footer/macro.njk' import footer %}
{% from 'components/hero/macro.njk' import hero %}
{% from 'components/card/macro.njk' import card %}

{% extends 'page.njk' %}

{% block header %}
  {{ super() }}

  {{ hero({
    "heading": "Our Future Health design system toolkit",
    "text": "Code you need to start building accessible user interfaces for Our Future Health websites and services."
  }) }}
{% endblock %}

{% block fullWidthContent %}

  <div class="ofh-grid-row ofh-card-group">
    <div class="ofh-grid-column-one-third ofh-card-group__item">
      {{ card({
        "href": "./pages/install.html",
        "clickable": "true",
        "heading": "Install",
        "headingClasses": "ofh-heading-m",
        "description": "Download and installation instructions."
      }) }}
    </div>
    <div class="ofh-grid-column-one-third ofh-card-group__item">
      {{ card({
        "href": "./pages/examples.html",
        "clickable": "true",
        "heading": "Examples",
        "headingClasses": "ofh-heading-m",
        "description": "Page layouts, test pages and components."
      }) }}
    </div>
    <div class="ofh-grid-column-one-third ofh-card-group__item">
      {{ card({
        "href": "./pages/about.html",
        "clickable": "true",
        "heading": "About",
        "headingClasses": "ofh-heading-m",
        "description": "Getting support and contributing."
      }) }}
    </div>
  </div>

  <hr class="ofh-u-margin-top-0 ofh-u-margin-bottom-6">

  <div class="ofh-u-reading-width">

    <p class="ofh-u-margin-bottom-0">Visit the <a href="https://service-manual.nhs.uk/">NHS digital service manual</a> for guidance and examples.</p>

  </div>

{% endblock %}
