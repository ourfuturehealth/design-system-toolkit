{% from 'components/header/macro.njk' import header %}

{% set mainNav = [
  { title: "Design system", url: "/design-system" }
] %}

<header class="ofh-header ofh-header__menu--only" role="banner">
  <div class="ofh-width-container ofh-header__container app-width-container">
    <div class="ofh-header__logo"><a class="ofh-header__link ofh-header__link--service " href="/" aria-label="NHS digital service manual homepage">
        <div class="ofh-header__logo">
          <a class="ofh-header__link" href="/" aria-label="Our Future Health homepage">
            <img class="ofh-org-logo" src="/ofh-design-system-toolkit/assets/logos/ofh-logo-marque.svg" alt="">
          </a>
        </div>
        <span class="ofh-header__service-name">
          Digital service manual
        </span>
      </a>
    </div>

      <div class="ofh-header__content" id="content-header">

        <div class="ofh-header__menu">
          <button class="ofh-header__menu-toggle" id="toggle-menu" aria-controls="header-navigation" aria-expanded="false">Menu</button>
        </div>

      </div>

    </div>

    <nav class="ofh-header__navigation app-header__navigation" id="header-navigation" role="navigation" aria-label="Primary navigation" aria-labelledby="label-navigation">
      <div class="ofh-width-container app-width-container">
        <p class="ofh-header__navigation-title"><span id="label-navigation">Menu</span>
          <button class="ofh-header__navigation-close" id="close-menu">
            <svg class="ofh-icon ofh-icon__close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" focusable="false" width="27" height="27">
              <path d="M13.41 12l5.3-5.29a1 1 0 1 0-1.42-1.42L12 10.59l-5.29-5.3a1 1 0 0 0-1.42 1.42l5.3 5.29-5.3 5.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l5.29-5.3 5.29 5.3a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42z"></path>
            </svg>
            <span class="ofh-u-visually-hidden">Close menu</span>
          </button>
        </p>
        <ul class="ofh-header__navigation-list">
          <li class="ofh-header__navigation-item ofh-header__navigation-item--for-mobile">
            <a class="ofh-header__navigation-link" href="/">
              Home
              <svg class="ofh-icon ofh-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" width="34" height="34">
                <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
              </svg>
            </a>
          </li>
          {% for item in mainNav %}
          <li class="ofh-header__navigation-item{% if item.title == pageSection %} app-header__navigation-item__item--current{% endif %}">
            <a class="ofh-header__navigation-link" href="{{ item.url }}">
              {{ item.title }}
              <svg class="ofh-icon ofh-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" width="34" height="34">
                <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z"></path>
              </svg>
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </nav>
</header>
