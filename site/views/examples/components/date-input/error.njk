{% set html_style = 'background-color: #f0f4f5;' %}
{% set pageTitle = 'Date input with errors' %}
{% from 'components/date-input/macro.njk' import dateInput %}
{% extends 'standalone-example-layout.njk' %}

{% block body %}

  <div class="ofh-width-container">
    <main class="ofh-main-wrapper" id="maincontent">

      <div class="ofh-grid-row">
        <div class="ofh-grid-column-two-thirds">
          {{ dateInput({
            "id": "dob-day-error",
            "namePrefix": "dob-day-error",
            "fieldset": {
              "legend": {
                "text": "What is your date of birth?"
              }
            },
            "hint": {
              "text": "For example, 31 3 1980"
            },
            "errorMessage": {
              "text": "Error message goes here"
            },
            "items": [
              {
                "name": "day",
                "classes": "ofh-input--width-2 ofh-input--error"
              },
              {
                "name": "month",
                "classes": "ofh-input--width-2"
              },
              {
                "name": "year",
                "classes": "ofh-input--width-4"
              }
            ]
          }) }}
        </div>
      </div>

    </main>
  </div>

{% endblock %}
