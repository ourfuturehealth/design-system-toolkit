{% extends "design-example-wrapper-full-layout.njk" %}

{% from 'packages/components/button/macro.njk' import button %}
{% from 'packages/components/hint/macro.njk' import hint %}
{% from 'packages/components/fieldset/macro.njk' import fieldset %}
{% from 'packages/components/radios/macro.njk' import radios %}

{% block content %}
  <div class="ofh-grid-row">
    <div class="ofh-grid-column-two-thirds">

      {% call fieldset({
        legend: {
          "text": "Do you know your NHS number?",
          "classes": "ofh-fieldset__legend--l"
        }
        }) %}
        {{ hint({
          "html": "Your NHS number is a 10 digit number, like <span class=\"ofh-u-nowrap\">485 777 3456</span>.",
          "classes": "ofh-u-margin-bottom-2"
        }) }}
        {{ hint({
          "text": "You can find it on any letter the NHS has sent you, on a prescription, or by logging in to a GP practice online service."
        }) }}
        {{ radios({
          "idPrefix": "nhs-number",
          "name": "nhs-number",
          "items": [
          {
            "value": "yes",
            "text": "Yes, I know my NHS number"
          },
          {
            "value": "no",
            "text": "No, I do not know my NHS number"
          }
        ]
        }) }}
        {{ button({
          "text": "Continue"
        }) }}
      {% endcall %}

    </div>
  </div>
{% endblock %}
