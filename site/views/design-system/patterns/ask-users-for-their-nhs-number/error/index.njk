{% extends "design-example-wrapper-full-layout.njk" %}

{% from 'packages/components/input/macro.njk' import input %}
{% from 'packages/components/button/macro.njk' import button %}
{% from 'packages/components/error-summary/macro.njk' import errorSummary %}

{% block content %}
  <div class="ofh-grid-row">
    <div class="ofh-grid-column-two-thirds">

      {{ errorSummary({
        "titleText": "There is a problem",
        "errorList": [
          {
            "text": "Your NHS number is too long",
            "href": "#nhs-number"
          }
        ]
      }) }}

      {{ input({
        label: {
          text: "What is your NHS number?",
          classes: "ofh-label--l",
          isPageHeading: true
        },
        hint: {
          html: "Your NHS number is a 10 digit number that you find on any letter the NHS has sent you. For example, <span class=\"ofh-u-nowrap\">485 777 3456</span>."
        },
        errorMessage: {
          "text": "Your NHS number is too long"
        },
        id: "nhs-number",
        name: "nhs-number",
        classes: "ofh-input--width-10",
        inputmode: "numeric"
      }) }}

      {{ button({
        "text": "Continue"
      }) }}

    </div>
  </div>
{% endblock %}
