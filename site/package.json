{
  "name": "ofh-design-system-documentation",
  "private": true,
  "scripts": {
    "docs:dev": "npm run docs:build:toolkit && npm run docs:clean && npm run docs:watch",
    "docs:clean": "rm -rf dist/ && mkdir -p dist",
    "docs:watch": "concurrently -n toolkit:watch 'npm run watch --prefix ../' 'npm:docs:watch:css' 'npm:docs:watch:js' 'npm:docs:serve'",
    "docs:watch:css": "npm run docs:build:css -- --watch",
    "docs:watch:js": "npm run docs:build:js -- --watch",
    "docs:build": "npm run docs:build:toolkit && npm run docs:build:css && npm run docs:build:js",
    "docs:build:toolkit": "npm run clean --prefix ../ && npm run build --prefix ../",
    "docs:build:css": "sass --style compressed --load-path ../packages/ styles/:dist/css/",
    "docs:build:js": "webpack",
    "docs:serve": "npx @11ty/eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "glob": "^8.0.3",
    "highlight.js": "^11.6.0",
    "iframe-resizer": "^4.3.2",
    "js-beautify": "^1.14.6",
    "nunjucks": "^3.2.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
