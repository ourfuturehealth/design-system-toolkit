<div id="nhsuk-global-alert" class="nhsuk-c-global-alert">
  <div class="nhsuk-o-width-container">
    <div class="nhsuk-o-grid">
      <div class="nhsuk-o-grid__item nhsuk-o-grid__item--full">
        <div class="nhsuk-c-global-alert__content">
          <h2 class="nhsuk-c-global-alert__header"><span role="text"><span class="visually-hidden">Alert: </span>{{title}}</span></h2>
          <p class="nhsuk-c-global-alert__message">{{content}} <a href="{{emergencyURL}}">{{emergencyLabel}}</a></p>
          <p class="nhsuk-c-global-alert__updated">{{lastUpdated}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
