{% set headingLevel = params.headingLevel if params.headingLevel else 3 %}
<div class="ofh-warning-callout
{%- if params.classes %} {{ params.classes }}{% endif %}"
{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <h{{ headingLevel }} class="ofh-warning-callout__label">
    {%- if "Important" in params.heading or "important" in params.heading %}
    {{ params.heading | safe }}<span class="ofh-u-visually-hidden">:</span>
    {%- else %}
    <span role="text">
      <span class="ofh-u-visually-hidden">Important: </span>
      {{ params.heading | safe }}
    </span>
    {%- endif %}
  </h{{ headingLevel }}>
  {{ params.HTML | safe }}
</div>
