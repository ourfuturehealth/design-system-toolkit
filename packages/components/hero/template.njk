<section class="ofh-hero
{%- if params.imageURL and params.heading %} ofh-hero--image ofh-hero--image-description
{%- elif params.imageURL %} ofh-hero--image{% endif %}
{%- if params.classes %} {{ params.classes }}{% endif %}"
{%- if params.imageURL %} style="background-image: url('{{ params.imageURL }}');"{% endif %}
{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
{% if params.imageURL %}<div class="ofh-hero__overlay">{% endif %}
{%- if params.heading %}
  <div class="ofh-width-container{% if not params.imageURL %} ofh-hero--border{% endif %}">
    <div class="ofh-grid-row">
      <div class="ofh-grid-column-two-thirds">
        <div class="{% if params.imageURL %}ofh-hero-content{% else %}ofh-hero__wrapper{% endif %}">
          <h1 {% if params.text %}class="ofh-u-margin-bottom-3"{% endif %}>{{ params.heading }}</h1>
          {% if params.text %}<p class="ofh-body-l ofh-u-margin-bottom-0">{{ params.text }}</p>{% endif %}
          {% if params.imageURL %}<span class="ofh-hero__arrow" aria-hidden="true"></span>{% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif -%}
{%- if params.imageURL %}</div>{% endif %}
</section>
