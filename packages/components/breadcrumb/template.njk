<nav class="nhsuk-c-breadcrumb{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} aria-label="Breadcrumb">
  <div class="nhsuk-width-container">
    <ol class="nhsuk-c-breadcrumb__list">
      {% for item in params.items %}
        {% if item.URL %}
          <li class="nhsuk-c-breadcrumb__item"><a href="{{ item.URL }}" class="nhsuk-c-breadcrumb__link">{{ item.label }}</a> {% include 'assets/icons/icon-chevron-right.svg' %}</li>
        {% endif %}
      {% endfor %}
      <li class="nhsuk-c-breadcrumb__item"><a href="{{ params.parentURL }}" class="nhsuk-c-breadcrumb__link">{{ params.parentLabel }}</a></li>
    </ol>
    <p class="nhsuk-c-breadcrumb__back">{% include 'assets/icons/icon-chevron-left.svg' %}<a href="{{ params.parentURL }}" class="nhsuk-c-breadcrumb__backlink">Back to {{ params.parentLabel }}</a></p>
  </div>
</nav>
