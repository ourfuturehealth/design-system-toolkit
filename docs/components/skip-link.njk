{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Action link' %}
{% from 'components/skip-link/macro.njk' import skipLink %}
{% extends 'layout.njk' %}

{% block body %}

  <div class="nhsuk-width-container">
    <main id="maincontent" class="nhsuk-main-wrapper">

      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <div class="nhsuk-page-content">
            <p>To view the skip link component, press tab or navigate to the next element.</p>

            {{ skipLink({
              "URL": "#maincontent",
              "heading": "Skip to main content"
            }) }}
          </div>
        </div>
      </div>

    </main>
  </div>

{% endblock %}
