{% set title = 'Transactional test page - NHS.UK Frontend' %}
{% from 'components/button/macro.njk' import button %}
{% from 'components/fieldset/macro.njk' import fieldset %}
{% from 'components/input/macro.njk' import input %}
{% from 'components/date-input/macro.njk' import dateInput %}

{% extends 'forms.njk' %}

{% set mainWrapperClass = 'nhsuk-main-wrapper--s' %}

{% block header %}
  <!-- Skip link -->
  {{ skipLink({
    "URL": "#maincontent",
    "heading": "Skip to main content"
  }) }}

  <!-- Header -->
  {{ header({
    "transactionalService": {
        "name": "Find out why your NHS data matters",
        "longName": "true"
      },
      "showNav": "false",
      "showSearch": "false"
    })
  }}
{% endblock %}

{% block content %}

<form>

  <div class="nhsuk-form-group nhsuk-form-group--wrapper">

    {{ dateInput({
      "id": "dob",
      "namePrefix": "dob",
      "fieldset": {
        "legend": {
          "text": "What is your date of birth?",
          "classes": "nhsuk-fieldset__legend--l",
          "isPageHeading": true
        }
      },
      "hint": {
        "text": "For example, 31 3 1980"
      },
      "items": [
        {
          "name": "day",
          "classes": "nhsuk-input--width-2"
        },
        {
          "name": "month",
          "classes": "nhsuk-input--width-2"
        },
        {
          "name": "year",
          "classes": "nhsuk-input--width-4"
        }
      ]
    }) }}

  </div>

  {{ button({
    "text": "Continue"
  }) }}

  <p class="nhsuk-!-margin-bottom-0"><a href="#">Go back</a></p>

</form>

{% endblock %}

